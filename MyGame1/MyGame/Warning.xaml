<Window x:Class="MyGame.Warning"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyGame"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Warning" Height="350" Width="350">

    <Grid Background="Beige">
        <Label Content="Are you sure?" Height="55" VerticalAlignment="Top" Margin="113,95,-123,0" FontSize="20" Foreground="Crimson"  FontStyle="Italic"/>
        <Label Content="This game will be considered lost." Height="55" VerticalAlignment="Top" Margin="15,130,-25,0" Foreground="Crimson" FontSize="20" FontStyle="Italic"/>
        <Button Name="SureButton" Margin="20,245,245,25" Content="Yes" Background="#FFE4D2C0" Foreground="Crimson" FontWeight="Bold" FontStyle="Italic" Click ="IsSure"/>
        <Button Name="NotSureButton" Margin="240,245,25,25" Content="No" Background="#FFE4D2C0" FontWeight="Bold" FontStyle="Italic" Foreground="Crimson" Click="IsNotSure"/>
    </Grid>
</Window>
